{
    "name": "afb-display",
    "port": 1234,
    "alias": [
        "/devtools:/usr/share/afb-ui-devtools/binder"
    ],
    "monitoring": true,
    "binding": [
        {
            "uid": "display-lvgl",
            "api": "display",
            "path": "${HOME}/.cargo/build/debug/libafb_lvgl.so",
            "info": "lvgl embedded display binding",
            "permission": "acl:display:client",
            "display": {
                "x_res": 1024,
                "y_res": 600,
                "ratio": 1
            },
            "theme": {
                "dark": false,
                "primary": {
                    "red": 10,
                    "blue": 20,
                    "green": 30 
                } ,
                "secondary":{
                    "red": 40,
                    "blue": 50,
                    "green": 50 
                }
            }
        }
    ]
}
